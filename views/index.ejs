<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>Free Intel Hub</title>
  <link rel="stylesheet" href="/style.css"/>
</head>
<body>

<%- include("partials/navbar") %>

<section class="hero">
  <h1>Your daily dose of cyber</h1>
  <form class="search-modern" action="/search">
    <input name="q" placeholder="Search CVEs, vendors, breaches, advisories..." />
    <button>Search</button>
  </form>
</section>

<div class="container">

  <!-- Trending CVEs -->
  <div class="section-title">ğŸ”¥ Trending CVEs</div>
  <div class="grid">
    <% trending.forEach(r => { %>
      <article class="card">
        <h4>
          <a href="<%= r.link %>" target="_blank" rel="noopener noreferrer">
            <%= r.title %>
          </a>
        </h4>
        <div class="badges">
          <span class="badge"><%= r.category %></span>
          <a class="badge" href="/vendor/<%= r.vendor %>"><%= r.vendor %></a>
          <a class="badge" href="/source/<%= encodeURIComponent(r.source) %>"><%= r.source %></a>
        </div>
        <div class="meta">
          <%= new Date(r.published_at).toLocaleString() %>
        </div>
      </article>
    <% }) %>
  </div>

  <!-- Latest News -->
  <div class="section-title">ğŸ†• Latest News</div>
  <div class="grid">
    <% rows.forEach(r => { %>
      <article class="card">
        <h4>
          <a href="<%= r.link %>" target="_blank" rel="noopener noreferrer">
            <%= r.title %>
          </a>
        </h4>
        <% if (r.summary) { %>
          <p><%= r.summary %></p>
        <% } %>
        <div class="badges">
          <span class="badge"><%= r.category %></span>
          <a class="badge" href="/vendor/<%= r.vendor %>"><%= r.vendor %></a>
          <a class="badge" href="/source/<%= encodeURIComponent(r.source) %>"><%= r.source %></a>
        </div>
        <div class="meta">
          <%= new Date(r.published_at).toLocaleString() %>
        </div>
      </article>
    <% }) %>
  </div>

  <!-- Pagination -->
  <div class="pagination">
    <% if (page > 1) { %>
      <a href="/?page=<%= page - 1 %>">â† Prev</a>
    <% } %>

    <span>Page <%= page %> of <%= totalPages %></span>

    <% if (page < totalPages) { %>
      <a href="/?page=<%= page + 1 %>">Next â†’</a>
    <% } %>
  </div>

</div>

<%- include("partials/footer") %>
