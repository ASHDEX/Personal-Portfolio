<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <title><%= cat %> – Free Intel Hub</title>
  <link rel="stylesheet" href="/style.css"/>
</head>
<body>

<%- include("partials/navbar") %>

<div class="container">
  <div class="section-title">Category: <%= cat %></div>

  <div class="grid">
    <% rows.forEach(r => { %>
      <article class="card">
        <h4><a href="<%= r.link %>" target="_blank"><%= r.title %></a></h4>
        <p><%= r.summary %></p>
        <div class="meta"><%= new Date(r.published_at).toLocaleString() %> • <%= r.source %></div>
      </article>
    <% }) %>
  </div>
</div>

<%- include("partials/footer") %>
